{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "src/js",
    "rootDir": "src/ts",
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "include": ["src/ts/**/*"]

}
